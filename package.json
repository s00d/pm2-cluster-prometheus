{
  "name": "pm2-cluster-prometheus-next",
  "version": "2.0.1",
  "description": "Aggregate node.js workers' metrics when use pm2 cluster mode",
  "main": "./dist/app.js",
  "types": "./dist/app.d.ts",
  "scripts": {
    "build": "tsc",
    "lint": "tslint --project tslint.json -t stylish"
  },
  "dependencies": {
    "@pm2/io": "^5.0.2",
    "address": "^2.0.1",
    "consul": "^1.2.0",
    "debug": "^4.3.4",
    "express": "^4.18.2",
    "express-query-parser": "^1.3.3",
    "pm2": "^5.3.1",
    "prom-client": "15.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/s00d/pm2-cluster-prometheus.git"
  },
  "config": {
    "app_name": "api,charge",
    "host": "127.0.0.1",
    "port": 3000,
    "reigster_disabled": false,
    "register_mode": "cluster",
    "limit": 100000
  },
  "apps": [
    {
      "merge_logs": true,
      "max_memory_restart": "500M",
      "script": "dist/app.js"
    }
  ],
  "author": "Ruiyuan Wang",
  "license": "MIT",
  "devDependencies": {
    "@types/consul": "^0.40.3",
    "@types/express": "^4.17.21",
    "@types/node": "^20.6.3",
    "typescript": "^5.3.3"
  }
}
